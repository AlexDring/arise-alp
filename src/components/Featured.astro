---
import { Image } from 'astro:assets'
// import featuredImage from '../media/featured-image.jpg'

import { storyblokEditable, renderRichText } from '@storyblok/astro'

const { blok } = Astro.props
const content = renderRichText(blok.content)
---

<section class="featured" {...storyblokEditable(blok)}>
  <!-- <Image src={featuredImage} alt="Inclusive education in action." /> -->
  <div class="featured__image">
    <Image inferSize={true} src={blok.image.filename} alt={blok.image.alt} />
  </div>
  <div class="featured__text">
    <header>
      <p class="subheading">{blok.sub_heading}</p>
      <h2>{blok.heading}</h2>
    </header>
    <Fragment set:html={content} />
  </div>
</section>

<style>
  section {
    margin-top: 60px;
    margin-bottom: 60px;
    display: flex;
    gap: calc(var(--spacing-sm) * 4);
    align-items: center;
    img {
      object-fit: cover;
      border-radius: var(--border-radius);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .featured__image {
      flex: 2;
    }
    .featured__text {
      flex: 3;
    }
    @media (max-width: 50rem) {
      flex-direction: column;
      align-items: start;
      .featured__image {
        max-height: 250px;
      }
    }
  }
</style>
