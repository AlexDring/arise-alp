---
import { Image } from 'astro:assets'

import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<section class="full-width" {...storyblokEditable(blok)}>
  <Image inferSize={true} src={blok.image.filename} alt={blok.image.alt} />
  <div>
    <h1>{blok.heading}</h1>
    <p>{blok.content}</p>
  </div>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: 1fr;
    height: 100lvh;
    /* min-height: 100lvh; */
    /* border-radius: 10px; */
    border: 10px solid #fff;
    background: radial-gradient(
        29.4% 72.86% at 49.06% 49.92%,
        rgba(255, 166, 158, 0.4) 0%,
        rgba(255, 166, 158, 0) 100%
      ),
      radial-gradient(
        235.27% 59.43% at 92.5% 3.53%,
        rgba(32, 87, 224, 0.6) 0%,
        rgba(255, 255, 255, 0.85) 100%
      );
    background-repeat: no-repeat;
    background-size: 100% 100%;
    border: 10px solid white;
    > img {
      grid-area: 1/1/-1/-1;
      z-index: -1;
      width: 100%;
      height: 100%;
      max-height: 98lvh;
      object-fit: cover;
      border-radius: 10px;
    }
    > div {
      grid-area: 1/1/-1/-1;

      /* background-color: #fff; */
      max-width: 820px;
      margin-inline: auto;
      /* margin-top: 190px; */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      p {
        font-size: 1.5rem;
      }
    }
  }
</style>
