---
const { menuItems, id: idName, ...rest } = Astro.props
---

<ul id={idName} {...rest}>
  {
    menuItems.map((item) => {
      return (
        <li>
          <a href={item.slug === "/" ? "/" : `/${item.slug}`}>{item.name}</a>
          {item.dropdown_menu && (
            <div class="mobile-submenu">
              <ul>
                {item.dropdown_menu.map((dropdownItem) => {
                  return (
                    <li>
                      <a
                        href={
                          dropdownItem.slug === "/"
                            ? "/"
                            : `/${dropdownItem.slug}`
                        }
                      >
                        {dropdownItem.name}
                      </a>
                    </li>
                  )
                })}
              </ul>
            </div>
          )}
        </li>
      )
    })
  }
</ul>
