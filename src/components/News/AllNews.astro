---
import { storyblokEditable, useStoryblokApi } from "@storyblok/astro"
import NewsCard from "../News/NewsCard.astro"
import Update from "../News/Update.astro"
const { blok } = Astro.props

const storyblokApi = useStoryblokApi()
let allNews = []
let news = []
let updates = []

try {
  const { data } = await storyblokApi.get(`cdn/stories`, {
    version: "published",
    starts_with: "news-updates/",
    is_startpage: 0
  })

  allNews = data?.stories || []
  news = allNews.filter((article) => article?.content?.component === "news")
  updates = allNews.filter(
    (article) => article?.content?.component === "update"
  )
} catch (error) {
  console.error("Error fetching news:", error)
}

console.log(updates, "updates in all news")
---

<section {...storyblokEditable(blok)}>
  {updates?.length > 0 && <h2 class="updates-title">Updates</h2>}
  <ul>
    {
      updates?.length > 0 &&
        updates.map((article) => {
          console.log(article, "article in updates map")
          return (
            <li>
              <Update article={article} />
            </li>
          )
        })
    }
  </ul>
  {news?.length > 0 && <h2 class="updates-title">News</h2>}
  <ul class="news-list">
    {
      news?.length > 0 &&
        news.map((article) => (
          <li>
            <NewsCard article={article} />
          </li>
        ))
    }
  </ul>
</section>

<style>
  section {
    padding-top: 6.25rem;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .news-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    @media (max-width: 34.375rem) {
      grid-template-columns: 1fr;
    }
  }
  .updates-title {
    border-left: 1px solid var(--light-gray);
    padding-left: 1rem;
    color: var(--blue);
    font-family: "Inter", sans-serif;
    text-transform: uppercase;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0;
    padding-bottom: 30px;
  }
</style>
