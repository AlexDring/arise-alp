---
import {
  storyblokEditable,
  renderRichText,
  useStoryblokApi
} from '@storyblok/astro'

const { blok } = Astro.props
const storyblokApi = useStoryblokApi()
const content = renderRichText(blok.content)
---

<section {...storyblokEditable(blok)} class="content-grid">
  <div>
    <Fragment set:html={content} />
  </div>
</section>

<style>
  section {
    padding-top: 60px;
    padding-bottom: 60px;
  }
</style>
