<style is:global lang="scss">
  :root {
    --text-color: #212427dd;
    --light-gray: #f4f4f7;
    --orange: #ffa69e;
    --blue: #2057e0;
    --light-blue: #b8f3ff;
    --border-rad: 10px;
    --border-rad-sm: 7px;
    --drop-shadow: 0px 0px 5px rgba(32, 87, 224, 0.17);

    /** Breakpoints */
    --mobile: 34.375rem; /* 550px */
    --tablet-sm: 50rem; /* 800px */
    --tablet: 68.75rem; /* 1100px */
    --laptop: 93.75rem; /* 1500px */

    /** Spacing */
    --spacing-sm: 12px;
    --spacing-md: 24px;
    --spacing-lg: 72px;

    /** Font */
    --font-heading: "Lora Variable", serif;
  }

  /* Reset */
  /*
  1. Use a more-intuitive box-sizing model.
*/
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  /*
  2. Remove default margin
*/
  * {
    margin: 0;
  }
  /*
  Typographic tweaks!
  3. Add accessible line-height
  4. Improve text rendering
*/
  html {
    scroll-behavior: smooth;
  }
  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }
  /*
  5. Improve media defaults
*/
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  /*
  6. Remove built-in form typography styles
*/
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  /*
  7. Avoid text overflows
*/
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }
  /*
  8. Create a root stacking context
*/
  #root,
  #__next {
    isolation: isolate;
  }

  body {
    font-family: "Roboto", sans-serif;
    color: var(--text-color);
  }
  p {
    text-wrap: pretty;
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
  }

  li:not(:last-child) {
    p {
      margin-bottom: 0.5rem;
    }
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-heading);
    line-height: 1.3;
    margin-bottom: var(--spacing-sm);
  }

  h1 {
    /* font-size: 4.58333333rem; */
    font-size: clamp(2.5rem, 5vw, 3rem);
  }
  h2 {
    font-size: clamp(1.5rem, 5vw, 1.8rem);
    // margin-bottom: 2.1875rem;
  }

  h3 {
    font-size: clamp(1.3rem, 4vw, 1.5rem);
  }

  h4 {
    font-size: clamp(1.2rem, 3vw, 1.4rem);
  }
  main {
    /* max-width: 1170px; */
    margin-inline: auto;
    position: relative;
  }

  .cta {
    padding: 10px 35px 10px 20px;
    border-radius: var(--border-rad-sm);
    background-color: var(--blue);
    color: #fff;
    position: relative;
    text-decoration: none;
    font-weight: 700;
    &:before,
    &:after {
      display: inline-block;
      content: url("../assets/chevron-right-solid.svg");
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      height: 20px;
      width: 9px;
      transition: right 0.2s ease-in-out;
    }
    &:hover {
      opacity: 0.95;
      &:after {
        // transform: translateY(-50%) rotate(90deg);
        right: 14px;
      }
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  // Grid
  .full-width,
  .content-grid {
    display: grid;
    grid-template-columns:
      [full-width-start] minmax(20px, 1fr) [content-start] minmax(
        min-content,
        73.125rem
      )
      [content-end] minmax(20px, 1fr) [full-width-end];
    > * {
      grid-column: content;
      &.full-width {
        grid-column: full-width;
      }
    }
  }
  .published-date {
    font-size: 0.875rem;
    color: #808187;
    font-weight: 500;
    // text-transform: uppercase;
  }
  .subheading {
    // font-size: clamp(1rem, 2vw, 1.25rem);
    // text-transform: uppercase;
    // font-weight: 600;
    // letter-spacing: 1px;
    // margin-bottom: 0.625rem;
    // border-left: 1px solid var(--light-gray);
    // padding-left: 1rem;
    color: var(--blue);
    font-family: "Inter", sans-serif;
    text-transform: uppercase;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0;
    padding-bottom: 10px;
  }
  .featured:nth-child(even) {
    flex-direction: row-reverse;
    @media (max-width: 50rem) {
      flex-direction: column-reverse;
    }
  }

  // Nav - This has to be here because the #menu styles don't get passed through the component
  #menu-toggle {
    display: none;
    margin-left: auto;
    position: relative;
    z-index: 2;
    border: none;
    background: none;

    .close-icon {
      display: none;
    }
    &[aria-expanded="true"] {
      .close-icon {
        display: block;
      }
      .menu-icon {
        display: none;
      }
    }
    @media (max-width: 50rem) {
      display: block;
    }
  }
  .nav-bar {
    position: fixed;
    right: 0;
    top: 20px;
    left: 0;
    padding: 0 20px;
    display: flex;
    margin-inline: auto;
    flex-wrap: wrap;
    width: 100%;
    max-width: 1170px;
    z-index: 10;
    transition: top 0.2s ease-in-out;
    a {
      padding: 15px;
      border-radius: var(--border-rad);
      display: inline-block;
      transition: ease-in-out 0.22s all;
      font-size: 1rem;
      text-decoration: none;
      font-weight: 700;
      color: var(--text-color);
      &:hover {
        background-color: rgba(32, 87, 224, 0.05);
      }
      &.current {
        background-color: var(--blue);
        color: #fff;
      }
    }

    &.hide {
      top: -83px;
    }
    nav {
      margin-left: auto;
    }
    #menu {
      display: flex;
      list-style: none;
      flex-wrap: wrap;
      padding: 3px;
      margin: 0;
      position: relative;
      gap: 3px;
      margin-left: auto;
      background-color: #fff;
      border-radius: var(--border-rad);
      box-shadow: var(--drop-shadow);
      z-index: 9;
      margin-left: auto;
      transition: right 0.2s ease-in-out;
      @media (max-width: 50rem) {
        display: none;
      }
      a {
        padding: 15px;
        border-radius: var(--border-rad);
        display: inline-block;
        transition: ease-in-out 0.22s all;
        font-size: 1rem;
        text-decoration: none;
        font-weight: 700;
        color: var(--text-color);
        &:hover {
          background-color: rgba(32, 87, 224, 0.05);
        }
        &.current {
          background-color: var(--blue);
          color: #fff;
        }
      }
      .dropdown-trigger {
        position: relative;
        a {
          padding-right: 30px;
        }
        .dropdown-arrow:after {
          content: url("../assets/chevron-down-solid-blue.svg");
          position: absolute;
          width: 13px;
          top: 50%;
          right: 10px;
          transform: translateY(-50%);
        }
      }
    }
    .mobile-menu-wrapper #mobile-menu {
      display: none;
      @media (max-width: 50rem) {
        display: flex;
        overflow-y: scroll;
        flex-direction: column;
        justify-content: center;
        position: fixed;
        left: -50vw;
        top: 0;
        bottom: 0;
        width: 50vw;
        background: #fff;
        list-style: none;
        transition: left 0.2s ease-in-out;
        margin: 0;
        padding: 0;
        box-shadow: var(--drop-shadow);

        a {
          display: block;
          opacity: 0;
          transform: translateX(-100%);
        }
        > li {
          border-bottom: 2px solid #f6f9fc;
          &:last-child {
            border-bottom: none;
          }
          &:has(.mobile-submenu) {
            a {
              padding-bottom: 10px;
            }
          }

          @for $i from 1 through 10 {
            &:nth-child(#{$i}) {
              a {
                transition:
                  opacity calc(0.5s + (#{$i}) * 0.1s) ease-in-out,
                  transform calc(0.5s + (#{$i}) * 0.1s) ease-in-out;
              }
            }
          }
        }
        .mobile-submenu {
          ul {
            padding-left: 15px;
            list-style: none;
            // li {
            //   border-top: 1px solid var(--orange);
            // }
            a {
              font-size: 0.875rem;
              padding: 10px;
            }
          }
        }
        &.active {
          left: 0;
          a {
            opacity: 1;
            transform: translateX(0);
          }
        }
      }
      @media (max-width: 34.375rem) {
        left: -70vw;
        width: 70vw;
      }
    }
  }
</style>

<script>
  const elementsToObserve = document.querySelectorAll(".observe")

  if (elementsToObserve.length) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(({ target, isIntersecting }) => {
          if (target.classList.contains("toggle")) {
            target.classList.toggle("in-view", isIntersecting)
          } else if (isIntersecting) {
            target.classList.add("in-view")
            observer.unobserve(target)
          }
        })
      },
      {
        threshold: 0.5,
        rootMargin: "0px"
      }
    )

    elementsToObserve.forEach((element) => observer.observe(element))
  }
</script>
